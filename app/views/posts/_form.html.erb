
<%= form_for post ,remote: true do |form| %>
 <div class="form-group">
        <%= form.label :avatar, 'User Photo', class:'col-sm-2 control-label' %>
          <div class="col-sm-10">
        <%= form.file_field :avatar  %>
    </div>
  </div>
  
  <div class="form-group">
      <div class="col-sm-10">
      Discarption: <%= form.text_field :discarption %>
     </div>
  </div>
  <div class="col-sm-10">
        <%= form.submit "Submit" %>
      </div>
<% end %>